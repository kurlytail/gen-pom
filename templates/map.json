<%
    const packageBaseDir = extension('pom-group-id')[0].replace(/\./, '/') + '/' +
        lodash.kebabCase(extension('pom-artifact-id')[0]).replace(/-/, '/');
    const packageTubeBaseDir = packageBaseDir + "/tubes";
    const packageCellBaseDir = packageBaseDir + "/cells";
%>
{
    ".settings/org.eclipse.jdt.core.prefs": {
        "template": ".settings/org.eclipse.jdt.core.prefs._"
    },
    ".settings/org.eclipse.m2e.core.prefs": {
        "template": ".settings/org.eclipse.m2e.core.prefs._"
    },
    "src/main/java/.gitkeep": {
        "template": "src/main/java/.gitkeep._"
    },
    "src/main/resources/.gitkeep": {
        "template": "src/main/resources/.gitkeep._"
    },
    "src/test/java/.gitkeep": {
        "template": "src/test/java/.gitkeep._"
    },
    "src/test/resources/.gitkeep": {
        "template": "src/test/resources/.gitkeep._"
    },
<%
    Object.keys(design.MasterTube).forEach(key => {
        const className = lodash.upperFirst(lodash.camelCase(design.MasterTube[key].name));
%>
    "src/main/java/<%=packageTubeBaseDir%>/<%=className%>.java" : {
        "context" : {
            "className" : "<%=className%>",
            "packageName" : "<%=packageTubeBaseDir.replace(/\//g, '.')%>",
            "packageBaseDir" : "<%=packageTubeBaseDir%>"
        },
        "template": "src/main/java/master-tube-class.java._"
    },
<%
    })
%>
<%
    Object.keys(design.MasterCell).forEach(key => {
        const className = lodash.upperFirst(lodash.camelCase(design.MasterCell[key].name));
%>
    "src/main/java/<%=packageCellBaseDir%>/<%=className%>.java" : {
        "context" : {
            "className" : "<%=className%>",
            "packageName" : "<%=packageCellBaseDir.replace(/\//g, '.')%>",
            "packageBaseDir" : "<%=packageCellBaseDir%>"
        },
        "template": "src/main/java/master-cell-class.java._"
    },
<%
    })
%>
    ".classpath": {
        "template": ".classpath._"
    },
    ".project": {
        "template": ".project._"
    },
    "pom.xml": {
        "template": "pom.xml._"
    },
    ".gitignore": {
        "template": ".gitignore._"
    },
    "Jenkinsfile": {
        "template": "Jenkinsfile._"
    },
    "settings.xml": {
        "template": "settings.xml._"
    },
    "maven.pem": {
        "template": "maven.pem._"
    }
}